{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (AuctionService)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildAuctionService",
      "program": "${workspaceFolder}/src/AuctionService/bin/Debug/net8.0/AuctionService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/AuctionService",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/AuctionService/Views"
      }
    }
  ],
  "compounds": [
    {
      "name": "ALL",
      "configurations": [".NET Core Launch (AuctionService)"],
      "stopAll": true
    }
  ]
}
